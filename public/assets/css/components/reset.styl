*{
    box-sizing border-box
    text-decoration none
    list-style none
    text-transform uppercase
}
html, body{
    margin 0
    padding 0
    width 100%
    min-height 100vh
    height 100%
    font-family 'oswald'
    overflow-x hidden
}
a, ul, li, button{
    text-decoration none
    list-style none
    margin 0
    padding 0
    outline none
    appearance none
    border none
}
button{
    cursor pointer
    outline none
    border none
    appearance none
}
